{
  "compilerOptions": {
    "skipLibCheck": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "noEmit": false,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "src/*": ["src/*"]
    },
    "rootDirs": ["src"],
    "outDir": "dist",
    "sourceMap": false,
    "module": "commonjs",
    "target": "ES2018",
    "allowJs": true,
    "resolveJsonModule": true,
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/typeDefs/index.ts",
    "src/**/*",
    "src/constants.ts",
  ]
}
